<article class="bg-white flex flex-col items-start justify-between p-8 rounded-md hover:drop-shadow-xl">
    <div class="w-full flex items-center justify-between gap-x-4 text-xs">
        <time class="text-gray-500">{{ category.createdAt|date }}</time>
        <div class="flex items-center">
            <span class="relative z-10 rounded-full bg-stone-100 px-3 py-1.5 font-medium text-gray-600">
                {{ category.articles|length }}
            </span>
        </div>
    </div>
    <div class="group relative">
        <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600 hover:underline">
            <a href="{{ path('app_category', { id: category.id }) }}">
                <span class="absolute inset-0"></span>
                {{ category.name }}
            </a>
        </h3>
    </div>
</article>
