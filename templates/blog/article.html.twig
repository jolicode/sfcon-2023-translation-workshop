{% extends 'base.html.twig' %}

{% block body %}
    <article class="flex flex-col items-start justify-between mt-20 rounded-md">
        <div class="w-full flex items-center justify-between gap-x-4 text-xs">
            <time datetime="2020-03-16" class="text-gray-500">{{ article.createdAt|date }}</time>
            <div class="flex items-center">
                {% for category in article.categories %}
                    <a href="{{ path('app_category', { id: category.id }) }}"
                       class="relative z-10 rounded-full bg-white px-3 py-1.5 font-medium text-gray-600 hover:drop-shadow-lg {{ not loop.last ? 'mr-1' }}">
                        {{ category.name }}
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="group relative">
            <h1 class="mt-3 text-4xl font-bold leading-6 text-gray-900">
                {{ article.title }}
            </h1>
            <p class="mt-12 leading-7 text-base">
                {{ article.content|raw }}
            </p>
        </div>
        <div class="relative mt-12 flex self-end items-center gap-x-4">
            <p class="text-sm leading-6 font-semibold text-gray-900">
                <a href="#">{{ article.author.name }}</a>
            </p>
        </div>
    </article>
{% endblock %}
