{% extends 'base.html.twig' %}

{% block title %}Symfony Con Brussels 2023{% endblock %}

{% block body %}
    <h2 class="text-4xl font-bold mt-20">{{ 'article.heading'|trans }}</h2>
    <div class="mx-auto grid grid-cols-1 gap-8 border-t border-gray-200 pt-10 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        {% for article in articles %}
            <article class="bg-white flex flex-col items-start justify-between p-8 rounded-md hover:drop-shadow-xl">
                <div class="w-full flex items-center justify-between gap-x-4 text-xs">
                    <time datetime="2020-03-16" class="text-gray-500">{{ article.createdAt|date }}</time>
                    <div class="flex items-center">
                        {% for category in article.categories %}
                            <a href="#"
                               class="relative z-10 rounded-full bg-stone-100 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-50 {{ not loop.last ? 'mr-1' }}">
                                {{ category.name }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
                <div class="group relative">
                    <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                        <a href="#">
                            <span class="absolute inset-0"></span>
                            {{ article.title }}
                        </a>
                    </h3>
                    <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
                        {{ article.summary }}
                    </p>
                </div>
                <div class="relative mt-8 flex items-center gap-x-4">
                    <img src="https://images.unsplash.com/photo-1543610892-0b1f7e6d8ac1?q=80&w=1856&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=formatfit=facearea&facepad=2&w=256&h=256&q=80"
                         alt="" class="h-10 w-10 rounded-full bg-gray-50">
                    <div class="text-sm leading-6">
                        <p class="font-semibold text-gray-900">
                            <a href="#">
                                <span class="absolute inset-0"></span>
                                {{ article.author.name }}
                            </a>
                        </p>
                    </div>
                </div>
            </article>
        {% endfor %}
    </div>
{% endblock %}
